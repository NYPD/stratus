{
  "manifest_version": 2,
  "name": "stratus",
  "version": "0.0.1",
  "description": "Simple chrome extension that allows you to lower the volume output on SoundCloud.com",


  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["*://soundcloud.com/*"],
    "css": ["css/content-script.css"],
    "js": ["js/content-script.js"],
    "run_at": "document_end"
  }],
  "icons": {
    "32": "images/temp.png",
    "64": "images/temp.png",
    "128": "images/temp.png"
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    "images/volume-*.png",
    "images/temp.png",
    "js/stratus-inject.js"
  ]
}
